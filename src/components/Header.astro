---
import {client} from '@/utils'
import {IconHome2, IconTableFilled} from '@tabler/icons-react'

const spaces = await client.get('spaces')
const {slug} = Astro.params
---

<header>
  <div class="m-auto flex w-full justify-center pt-8">
    <div class="boder rounded-2xl border-2 border-solid border-slate-700 p-2 px-3">
      {
        [{title: 'Home'}, ...spaces?.data].map(({title}: {title: string}) => {
          const href = `/${title.replace(' ', '-').toLowerCase()}`
          return (
            <a
              class:list={[
                'inline-flex scale-90 cursor-pointer flex-row items-center justify-center gap-x-2 rounded-lg px-5 py-2.5 text-center font-medium text-white opacity-90 transition-all duration-200 ease-in-out hover:scale-110 hover:bg-primary-main hover:opacity-100 hover:shadow-lg focus:outline-none focus:ring-4 focus:ring-primary-light/50 not-last-child:mr-2',
                {'bg-primary-main opacity-100 shadow-lg': slug === title},
              ]}
              href={title === 'Home' ? '/' : href}
            >
              {slug === '/' ? <IconHome2 size={20} /> : <IconTableFilled size={20} />}
              {title}
            </a>
          )
        })
      }
    </div>
  </div>
</header>
